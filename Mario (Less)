#include <stdio.h>

int main()
{
   int n, i, j;

   do{
   printf("Height: ");
   scanf("%d", &n);
   }while(n<1 || n>8);

   for(i=n;i>0;i--)
   {
       for(j=0;j<n;j++)
       {
           if(j<i-1)
           {
               printf(" ");
           }
           else
           {
               printf("#");
           }
       }
       printf("\n");
   }

}
